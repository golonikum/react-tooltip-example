{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "webpack.config.js", "lib", "**/*.stories.tsx", "**/*.test.ts"]
}
